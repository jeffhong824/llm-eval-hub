# LangSmith Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=llm-eval-hub
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# LLM Judge Configuration
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Default Judge Model (openai, gemini, ollama, huggingface)
DEFAULT_JUDGE_MODEL=openai

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/llm_eval_hub
DATABASE_ECHO=false

# Application Configuration
APP_NAME=LLM Evaluation Hub
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here

# Evaluation Configuration
DEFAULT_EVALUATION_TIMEOUT=300
MAX_CONCURRENT_EVALUATIONS=10
CACHE_EVALUATION_RESULTS=true

# File Storage
UPLOAD_DIR=./data/uploads
RESULTS_DIR=./results
ARTIFACTS_DIR=./artifacts

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
